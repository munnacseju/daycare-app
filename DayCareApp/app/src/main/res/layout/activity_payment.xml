<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.PaymentActivity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:paddingLeft="10dp"
      >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        >

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="203dp"
          android:layout_height="185dp"
          app:srcCompat="@drawable/about_us" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:text="Enter Card Number"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/paymentCardNumberEtBt"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/paymentCardNumberEtBt"
        android:layout_below="@+id/imageView"
        android:hint="Enter card number"
        android:inputType="number" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView6"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:text="Enter PassWord"
        android:textColor="@color/colorBlack" />


    <EditText
        android:hint="Enter Password"
        android:id="@+id/paymentPassEtId"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/payconfirmbtid"
        android:layout_below="@+id/imageView"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/payconfirmbtid"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10px"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="248dp"
        android:padding="5dp"
        android:text="Confirm Payment"
        android:textAlignment="center"
        android:background="@drawable/bg_button"
        android:textAllCaps="false"></Button>

  </LinearLayout>

</ScrollView>

</RelativeLayout>